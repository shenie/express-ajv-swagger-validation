{
  "name": "openapi-validator-middleware",
  "version": "3.0.0",
  "description": "Fast input validation middleware using OpenAPI 2.0 (formerly Swagger) and 3.0 definitions file and ajv",
  "main": "src/middleware.js",
  "types": "types/index.d.ts",
  "files": [
    "src",
    "types/index.d.ts"
  ],
  "nyc": {
    "report-dir": "./coverage",
    "lines": 95,
    "statements": 95,
    "functions": 100,
    "branches": 90,
    "include": [
      "src/*.js"
    ],
    "exclude": [
      "index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": true,
    "all": true
  },
  "scripts": {
    "lint": "eslint .",
    "lint:types": "dtslint types && eslint types/index.d.ts",
    "lint:fix": "eslint --fix .",
    "test": "mocha test/**/*-test.js",
    "test:coverage": "nyc mocha test/**/*-test.js",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "doctoc": "npm install -g doctoc && doctoc README.md"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/PayU/openapi-validator-middleware.git"
  },
  "keywords": [
    "ajv",
    "express",
    "swagger",
    "OpenAPI",
    "open api",
    "input validation",
    "validation",
    "validator",
    "koa"
  ],
  "bugs": {
    "url": "https://github.com/PayU/openapi-validator-middleware/issues"
  },
  "homepage": "https://github.com/PayU/openapi-validator-middleware",
  "author": "Idan Tovi",
  "license": "Apache-2.0",
  "dependencies": {
    "api-schema-builder": "git+https://github.com/shenie/api-schema-builder.git#owner2.0.0",
    "memoizee": "^0.4.14"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "ajv-keywords": "^3.4.1",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "clear-module": "^3.2.0",
    "coveralls": "^3.0.14",
    "dtslint": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fastify": "^2.13.0",
    "fastify-plugin": "^1.6.1",
    "express": "^4.17.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "mocha": "^7.1.1",
    "multer": "^1.4.2",
    "nyc": "^15.0.1",
    "request": "^2.88.2",
    "rewire": "^4.0.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2",
    "typescript": "3.8.3",
    "uri-js": "^4.2.2"
  },
  "peerDependencies": {
    "uri-js": "^4.2.2"
  },
  "peerDependenciesMeta": {
    "uri-js": {
      "optional": true
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=8"
  }
}
